<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_1"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imagen1"
        android:layout_width="235dp"
        android:layout_height="186dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="427dp"
        android:contentDescription="@string/imagen1"
        app:srcCompat="@drawable/imagen1_removebg_preview" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="336dp"
        android:contentDescription="@string/texto1"
        android:fontFamily="@font/nunito_bold"
        android:text="@string/hola"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="60sp" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="92dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="275dp"
        android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="Ingrese su correo"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/contra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="92dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="209dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:scrollbarThumbHorizontal="@color/white"
        android:scrollbarTrackHorizontal="@color/white"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textIsSelectable="true" />

    <Button
        android:id="@+id/ingresoboton"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="143dp"
        android:background="@drawable/bordes_redondos"
        android:fontFamily="@font/roboto"
        android:onClick="irIniciar"
        android:text="Ingresar"
        android:textColor="@color/white"
        tools:ignore="TextContrastCheck" />


</RelativeLayout>